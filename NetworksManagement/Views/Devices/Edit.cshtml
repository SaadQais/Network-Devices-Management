@using NetworksManagement.Infrastructure.Extensions;

@model NetworksManagement.Data.ViewModels.DeviceViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-6">
                        <h3 class="card-title ">Edit  Device</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    <div class="p-4 border rounded">
                        <input type="hidden" asp-for="Device.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="Device.Name"></label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="Device.Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Device.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="Device.Group.Name"></label>
                            </div>
                            <div class="col-md-5">
                                <select asp-for="Device.GroupId" class="form-control"
                                        asp-items="Model.Groups.ToSelectListItem(Model.Device.GroupId)"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="Device.Interfaces"></label>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-5">
                                        <input type="text" placeholder="interface name" id="addInterface" class="form-control" />
                                    </div>
                                    <div class="col-md-5">
                                        <input type="text" placeholder="ip address" id="addIpAddress" class="form-control" />
                                    </div>
                                    <div class="col-md-2">
                                        <input type="button" id="addInterfaceBtn" value="Add Interface" class="btn btn-default btn-xs" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">

                            </div>
                            <div class="col-md-6">
                                <table id="itemsTable" class="table">
                                    <thead>
                                        <tr>
                                            <th> Interface Name </th>
                                            <th> Ip Address </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Device.Id" value="Update" />
                            <a asp-action="Index" class="btn btn-success">Back To List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

<script>
    $(document).ready(function () {
        $('#addInterfaceBtn').click(function () {
            var name = $('#addInterface').val();
            var ip = $('#addIpAddress').val();


            $('#itemsTable').append(
                '<tr><td>' +
                '<input type="text" readonly class="form-control" name = "interfaceName" value=' + name + '> </input> ' +
                '</td > <td> ' +
                '<input type="text" readonly class="form-control" name = "ipAddress" value=' + ip + '> </input> ' +
                ' </td> ' +
                '<td><button class="btn btn-default btn-xs" type="button" onclick="$(this).parent().parent().remove();;return false;"> <i class="material-icons">delete_forever</i></button>' +
                '</td></tr > ');
        });
    });
</script>
}


