@model NetworksManagement.Data.ViewModels.DeviceModelViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-6">
                        <h3 class="card-title ">Models List</h3>
                    </div>
                    <div class="col-6 pull-right">
                        <div class="text-right">
                            <a asp-action="Create" class="btn btn-info"><i class="material-icons">add</i> &nbsp; New Model</a>
                        </div>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Model.Name)</th>
                                <th>@Html.DisplayNameFor(m => m.Model.IsCore)</th>
                                <th>@Html.DisplayNameFor(m => m.Model.CategoryId)</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.Models)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Name)</td>
                                    <td>@Html.DisplayFor(m => item.IsCore)</td>
                                    <td>@Html.DisplayFor(m => item.Category.Name)</td>
                                    <partial name="_TableButtonsPartial" model="item.Id" />
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
