@model NetworksManagement.Data.ViewModels.GroupViewModel

@{
    ViewData["Title"] = "Delete";
    string locations = String.Join(", ", Model.Group.LocationsGroups.Select(lg => lg.Location).Select(l => l.Name));
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-6">
                        <h3 class="card-title ">Delete Group</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <form method="post" asp-action="Delete">
                    <div class="p-4  border rounded">
                        <input type="hidden" asp-for="Group.Id" />

                        <div class="col-8">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label asp-for="Group.Name"></label>
                                </div>
                                <div class="col-md-8">
                                    <input asp-for="Group.Name" disabled class="form-control" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label asp-for="Group.IpRange"></label>
                                </div>
                                <div class="col-md-8">
                                    <input asp-for="Group.IpRange" disabled class="form-control" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label asp-for="Locations"></label>
                                </div>
                                <div class="col-md-8">
                                    <input value="@locations" disabled class="form-control" />
                                </div>
                            </div>

                        </div>

                        <div class="col-1">

                        </div>

                        <div class="col-3">

                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-danger" value="Delete" />
                            <a asp-action="Index" class="btn btn-success">Back To List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>