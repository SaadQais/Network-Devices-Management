@model NetworksManagement.Data.ViewModels.GroupViewModel

@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <div class="row">
                        <div class="col-6">
                            <h3 class="card-title ">Groups List</h3>
                        </div>
                        <div class="col-6 pull-right">
                            <div class="text-right">
                                <a asp-action="Create" class="btn btn-info"><i class="material-icons">add</i> &nbsp; New Group</a>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
                <br />
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Group.Name)</th>
                                    <th>@Html.DisplayNameFor(m => m.Group.IpRange)</th>
                                    <th>@Html.DisplayName("Locations")</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Groups)
                                {
                                    
                                    string locations = String.Join(", ", item.LocationsGroups.Select(lg => lg.Location).Select(l => l.Name));
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>@Html.DisplayFor(m => item.IpRange)</td>
                                        <td>@Html.DisplayFor(m => locations)</td>
                                        <partial name="_TableButtonsPartial" model="item.Id" />
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
