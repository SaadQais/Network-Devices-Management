@model NetworksManagement.Data.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-6">
                        <h3 class="card-title ">Delete User</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <form method="post" asp-action="Delete">
                    <div class="p-4 border rounded">

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="Name"></label>
                            </div>
                            <div class="col-md-5">
                                <input disabled asp-for="Name" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="PhoneNumber"></label>
                            </div>
                            <div class="col-md-5">
                                <input disabled asp-for="PhoneNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="Email"></label>
                            </div>
                            <div class="col-md-5">
                                <input disabled asp-for="Email" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
                            <a asp-action="Index" class="btn btn-success">Back To List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

