@model NetworksManagement.Data.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-6">
                        <h3 class="card-title ">Edit  User</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    <div class="p-4 border rounded">
                        <input type="hidden" asp-for="ApplicationUser.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="ApplicationUser.Name"></label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="ApplicationUser.Name" class="form-control" />
                            </div>
                            <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="ApplicationUser.PhoneNumber"></label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="ApplicationUser.PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="ApplicationUser.Email"></label>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="ApplicationUser.Email" readonly class="form-control" />
                            </div>
                            <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="ApplicationUser.SuperAdmin"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="ApplicationUser.SuperAdmin" type="checkbox" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label asp-for="Groups"></label>
                            </div>
                            <div class="col-md-5">
                                @foreach (var group in Model.Groups)
                                {
                                    <div class="checkbox">
                                        @if (Model.SelectedGroups.Any(t => t.GroupId == group.Id))
                                {
                                            <input type="checkbox" name="SelectedGroups" value="@group.Id" checked /> @group.Name
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="SelectedGroups" value="@group.Id" /> @group.Name
                                        }
                                    </div>
                                }
                            </div>

                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" asp-route-id="@Model.ApplicationUser.Id" value="Update" />
                            <a asp-action="Index" class="btn btn-success">Back To List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

