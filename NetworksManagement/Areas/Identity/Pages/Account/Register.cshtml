@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-6">
                        <h3 class="card-title ">Create a new account</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="p-4 border rounded">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="Input.Name"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="Input.Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="Input.PhoneNumber"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="Input.Email"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="Input.Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="Input.Password"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="Input.Password" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="Input.ConfirmPassword"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="Input.IsSuperAdmin"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="Input.IsSuperAdmin" type="checkbox" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="@Model.Groups"></label>
                            </div>
                            <div class="col-5">
                                @foreach (var group in Model.Groups)
                                {
                                    <input type="checkbox" id="SelectedGroups" name="SelectedGroups"
                                           value="@group.Id" /> @group.Name <br />
                                    }
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
